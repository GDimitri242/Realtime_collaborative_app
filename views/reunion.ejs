<!DOCTYPE html>
<html lang="fr" data-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- Daisy UI CSS -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Styles personnalis√©s -->
    <link rel="stylesheet" href="/css/daisy.css">
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üìπ</text></svg>">
    <style>
        /* Styles pour la superposition des vid√©os */
        .video-superposition {
            position: relative;
            width: 100%;
            height: 100%;
        }

        .video-principale {
            width: 100%;
            height: 100%;
            position: relative;
            z-index: 1;
        }

        .video-superposee {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 150px;
            height: 150px;
            z-index: 2;
            border: 2px solid #10b981;
            border-radius: 10px;
            background: #000;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        }

        .video-superposee .video-label {
            display: none;
        }

        /* Animation pour les boutons de contr√¥le */
        .controles-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
            flex-wrap: wrap;
            padding: 20px 0;
        }

        /* Responsive pour les vid√©os superpos√©es */
        @media (max-width: 768px) {
            .video-superposee {
                width: 200px;
                height: 150px;
                top: 10px;
                right: 10px;
            }
        }

        /* Styles pour le modal d'invitation */
        .invite-link-container {
            display: flex;
            align-items: center;
            background: #1f2937;
            border-radius: 8px;
            padding: 8px;
            margin-bottom: 12px;
        }

        .invite-link {
            flex: 1;
            padding: 8px 12px;
            background: #374151;
            border-radius: 6px;
            font-family: monospace;
            font-size: 14px;
            color: #e5e7eb;
            word-break: break-all;
        }

        .copy-btn {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            margin-left: 8px;
            font-size: 14px;
            transition: background-color 0.2s;
        }

        .copy-btn:hover {
            background: #2563eb;
        }

        .action-buttons {
            display: flex;
            gap: 12px;
            margin-top: 20px;
        }

        .action-btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 16px;
            border: 1px solid #374151;
            border-radius: 8px;
            background: #1f2937;
            color: #e5e7eb;
            cursor: pointer;
            transition: all 0.2s;
        }

        .action-btn:hover {
            background: #374151;
            border-color: #4b5563;
        }

        .action-btn.email {
            background-color: #3b82f6;
        }

        .action-btn.share {
            background-color: #10b981;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 16px;
            border-bottom: 1px solid #374151;
        }

        .close-modal {
            background: none;
            border: none;
            color: #9ca3af;
            cursor: pointer;
            padding: 4px;
            border-radius: 4px;
        }

        .close-modal:hover {
            background: #374151;
            color: #e5e7eb;
        }

        #inviteModal .modal-box {
            max-width: 600px !important;
            min-width: 400px;
        }
    </style>
</head>

<body class="min-h-screen">
    <!-- Header de la r√©union -->
    <header class="hero-header sticky top-0 z-50">
        <div class="navbar bg-base-100 bg-opacity-10 px-4">
            <div class="navbar-start">
                <div class="flex items-center gap-2">
                    <div>
                        <h1 class="font-bold text-lg">CIRAS MEET</h1>
                    </div>
                </div>
            </div>

            <div class="navbar-center">
                <div class="flex flex-col items-center">
                    <div class="text-sm font-semibold">ID r√©union : <%= idReunion %>
                    </div>
                    <div class="text-xs opacity-80 flex items-center gap-1">
                        <span class="status-badge status-online"></span>
                        Connect√©
                    </div>
                </div>
            </div>

            <div class="navbar-end">
                <div class="flex gap-2">
                    <a href="#" id="boutonQuitter" class="btn btn-ghost text-error">Quitter la r√©union</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Contenu principal de la r√©union -->
    <main class="flex-1 p-4">
        <div class="container mx-auto max-w-7xl">

            <!-- Zone des vid√©os -->
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
                <!-- Zone principale (3/4) -->
                <div class="lg:col-span-3 space-y-6">
                    <!-- Conteneur avec superposition des vid√©os -->
                    <div class="video-container aspect-video relative">
                        <div class="video-superposition">
                            <!-- Ma vid√©o (principale par d√©faut) -->
                            <div id="maVideoContainer" class="video-principale">
                                <video id="maVideo" autoplay muted
                                    class="w-full h-full object-cover rounded-lg"></video>
                                <div class="video-label absolute bottom-4 left-4">
                                    <%= nomUtilisateur %> (Vous)
                                </div>
                            </div>

                            <!-- Partage d'√©cran (superpos√© lors du partage) -->
                            <div id="partageEcranContainer" class="video-superposee" style="display: none;">
                                <video id="videoPartageEcran" autoplay
                                    class="w-full h-full object-contain rounded-lg bg-black"></video>
                                <div class="video-label absolute top-2 left-2 bg-blue-500 text-xs">
                                    Partage d'√©cran
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Vid√©os des autres participants -->
                    <div id="videosDistantes" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Les vid√©os des autres participants seront ajout√©es ici dynamiquement -->
                    </div>
                </div>

                <!-- Sidebar (1/4) -->
                <div class="lg:col-span-1 space-y-6">
                    <!-- Section Participants -->
                    <div class="reunion-container glass-card p-8 shadow-deep border-gray-200 p-4">
                        <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z">
                                </path>
                            </svg>
                            Participants
                        </h3>
                        <div id="listeParticipants" class="space-y-2 max-h-60 overflow-y-auto">
                            <!-- Les participants seront ajout√©s dynamiquement -->
                            <div class="participant-item">
                                <div class="flex items-center justify-between">
                                    <span class="text-white font-medium">
                                        <%= nomUtilisateur %>
                                    </span>
                                    <div class="flex gap-1">
                                        <div class="status-badge status-online" title="Audio activ√©"></div>
                                        <div class="status-badge status-online" title="Vid√©o activ√©e"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Barre de contr√¥les avec animation horizontale -->
            <div class="controles-container">
                <!-- Bouton Inviter -->
                <button id="boutonInviter"
                    class="btn btn-ghost text-white btn-sm lg:btn-md gap-2 bg-gray-500 hover:bg-gray-600">
                    <svg class="w-4 h-4" stroke="currentColor" viewBox="0 0 24 24" fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                        <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                        <g id="SVGRepo_iconCarrier">
                            <path
                                d="M21 6H17.8C16.1198 6 15.2798 6 14.638 6.32698C14.0735 6.6146 13.6146 7.07354 13.327 7.63803C13 8.27976 13 9.11984 13 10.8V12M21 6L18 3M21 6L18 9M10 3H7.8C6.11984 3 5.27976 3 4.63803 3.32698C4.07354 3.6146 3.6146 4.07354 3.32698 4.63803C3 5.27976 3 6.11984 3 7.8V16.2C3 17.8802 3 18.7202 3.32698 19.362C3.6146 19.9265 4.07354 20.3854 4.63803 20.673C5.27976 21 6.11984 21 7.8 21H16.2C17.8802 21 18.7202 21 19.362 20.673C19.9265 20.3854 20.3854 19.9265 20.673 19.362C21 18.7202 21 17.8802 21 16.2V14"
                                stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </g>
                    </svg>
                    Inviter
                </button>

                <!-- Bouton Audio -->
                <button id="boutonAudio"
                    class="btn btn-ghost btn-sm lg:btn-md gap-2 border-0 bg-gray-500 hover:bg-gray-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z">
                        </path>
                    </svg>
                    Audio
                </button>

                <!-- Bouton Vid√©o -->
                <button id="boutonVideo"
                    class="btn btn-ghost btn-sm lg:btn-md gap-2 border-0 bg-gray-500 hover:bg-gray-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z">
                        </path>
                    </svg>
                    Vid√©o
                </button>

                <!-- Bouton Partage d'√©cran -->
                <button id="boutonPartageEcran"
                    class="btn btn-ghost text-white btn-sm lg:btn-md gap-2 bg-blue-500 hover:bg-blue-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                        </path>
                    </svg>
                    Partager
                </button>
            </div>
        </div>
    </main>

    <!-- Message de statut (toast) -->
    <div id="messageStatut" class="toast-custom">
        <!-- Les messages de statut appara√Ætront ici -->
    </div>

    <!-- Modal de confirmation pour quitter -->
    <dialog id="quitModal" class="modal text-white">
        <div class="modal-box bg-base-200">
            <h3 class="font-bold text-lg">Quitter la r√©union</h3>
            <p class="py-4">√ätes-vous s√ªr de vouloir quitter cette r√©union ?</p>
            <div class="modal-action">
                <form method="dialog" class="flex gap-2">
                    <button class="btn btn-ghost">Annuler</button>
                    <button id="confirmQuit" class="btn btn-error">Quitter</button>
                </form>
            </div>
        </div>
    </dialog>

    <!-- Modal d'invitation -->
    <dialog id="inviteModal" class="modal">
        <div class="modal-box bg-base-200 max-w-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="text-lg font-semibold text-white">Inviter des participants</h3>
                    <button class="close-modal" id="close-invite-modal">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-white mb-2">Lien d'invitation</label>
                        <div class="invite-link-container">
                            <div id="invite-link" class="invite-link">https://localhost:3000/rejoindre/<%= idReunion %></div>
                            <button id="copy-link-btn" class="copy-btn">
                                Copier
                            </button>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-medium text-white mb-2">Code de la r√©union</label>
                        <div class="invite-link-container">
                            <div id="meeting-code" class="invite-link"><%= idReunion %></div>
                            <button id="copy-code-btn" class="copy-btn">
                                Copier
                            </button>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button id="email-share-btn" class="action-btn email">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            Envoyer par email
                        </button>
                        
                        <button id="native-share-btn" class="action-btn share">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                            </svg>
                            Partager le lien
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </dialog>

    <!-- Scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
    <script src="/js/script.js"></script>

    <script>
        // Initialiser la r√©union
        window.onload = function () {
            const idReunion = '<%= idReunion %>';
            const nomUtilisateur = '<%= nomUtilisateur %>';
            initialiserReunion(idReunion, nomUtilisateur);

            // Gestion du modal de confirmation
            const quitModal = document.getElementById('quitModal');
            const confirmQuit = document.getElementById('confirmQuit');

            document.getElementById('boutonQuitter').addEventListener('click', function () {
                quitModal.showModal();
            });

            confirmQuit.addEventListener('click', function () {
                window.location.href = '/';
            });

            // Gestion du modal d'invitation
            const inviteModal = document.getElementById('inviteModal');
            const boutonInviter = document.getElementById('boutonInviter');
            const closeInviteModal = document.getElementById('close-invite-modal');
            const copyLinkBtn = document.getElementById('copy-link-btn');
            const copyCodeBtn = document.getElementById('copy-code-btn');
            const emailShareBtn = document.getElementById('email-share-btn');
            const nativeShareBtn = document.getElementById('native-share-btn');

            // Ouvrir le modal d'invitation
            boutonInviter.addEventListener('click', function () {
                inviteModal.showModal();
            });

            // Fermer le modal d'invitation
            closeInviteModal.addEventListener('click', function () {
                inviteModal.close();
            });

            // Copier le lien d'invitation
            copyLinkBtn.addEventListener('click', function () {
                const inviteLink = document.getElementById('invite-link').textContent;
                navigator.clipboard.writeText(inviteLink).then(function() {
                    copyLinkBtn.textContent = 'Copi√©!';
                    setTimeout(() => {
                        copyLinkBtn.textContent = 'Copier';
                    }, 2000);
                    afficherToast('Lien copi√© dans le presse-papier');
                });
            });

            // Copier le code de r√©union
            copyCodeBtn.addEventListener('click', function () {
                const meetingCode = document.getElementById('meeting-code').textContent;
                navigator.clipboard.writeText(meetingCode).then(function() {
                    copyCodeBtn.textContent = 'Copi√©!';
                    setTimeout(() => {
                        copyCodeBtn.textContent = 'Copier';
                    }, 2000);
                    afficherToast('Code copi√© dans le presse-papier');
                });
            });

            // Partager par email
            emailShareBtn.addEventListener('click', function () {
                const subject = 'Invitation √† rejoindre la r√©union CIRAS MEET';
                const body = `Je vous invite √† rejoindre ma r√©union sur CIRAS MEET.\n\nRejoignez la r√©union ici : https://localhost:3000/rejoindre/<%= idReunion %>\n\nCode de la r√©union : <%= idReunion %>`;
                const mailtoLink = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
                window.open(mailtoLink, '_blank');
            });

            // Partage natif
            nativeShareBtn.addEventListener('click', function () {
                if (navigator.share) {
                    navigator.share({
                        title: 'Rejoindre ma r√©union CIRAS MEET',
                        text: 'Rejoignez ma r√©union vid√©o sur CIRAS MEET',
                        url: `https://localhost:3000/rejoindre/<%= idReunion %>`
                    }).catch(() => {
                        // L'utilisateur a annul√© le partage
                    });
                } else {
                    afficherToast('Le partage natif n\'est pas support√© sur ce navigateur', 'error');
                }
            });

            // Fermer le modal en cliquant √† l'ext√©rieur
            inviteModal.addEventListener('click', function (event) {
                if (event.target === inviteModal) {
                    inviteModal.close();
                }
            });
        };

        // Fonction pour afficher les toasts
        function afficherToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} shadow-lg mb-2`;
            toast.innerHTML = `
                <div>
                    <span>${message}</span>
                </div>
            `;

            const toastContainer = document.getElementById('messageStatut');
            toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Fonction pour afficher/masquer le partage d'√©cran
        function togglePartageEcran(afficher) {
            const partageEcranContainer = document.getElementById('partageEcranContainer');
            const maVideoContainer = document.getElementById('maVideoContainer');

            if (afficher) {
                // Activer le partage d'√©cran
                partageEcranContainer.style.display = 'block';
                // Changer les positions
                maVideoContainer.className = 'video-superposee';
                partageEcranContainer.className = 'video-principale';

                // Mettre √† jour les labels
                document.querySelector('#maVideoContainer .video-label').classList.add('text-xs');
                document.querySelector('#maVideoContainer .video-label').classList.remove('bg-green-500');
                document.querySelector('#maVideoContainer .video-label').classList.add('bg-green-400');
            } else {
                // D√©sactiver le partage d'√©cran
                partageEcranContainer.style.display = 'none';
                // R√©tablir les positions par d√©faut
                maVideoContainer.className = 'video-principale';

                // R√©tablir les labels
                document.querySelector('#maVideoContainer .video-label').classList.remove('text-xs');
                document.querySelector('#maVideoContainer .video-label').classList.remove('bg-green-400');
                document.querySelector('#maVideoContainer .video-label').classList.add('bg-green-500');
            }
        }
    </script>
</body>

</html>